  <div class="panel-body form-edit-custom">
    <form action="/createreview" method="POST">
      <div class="form-group">
        <label for="rateInput">Rate booking</label>
        <input type="number" class="form-control" placeholder="Amount of stars" name="stars">
      </div>
      <div class="form-group">
        <label for="evaluationInput">Description</label>
        <input type="text" class="form-control" id="evaluation" placeholder="Evaluation" name="evaluation">
      </div>
      <input type="hidden" name="bookingId" value="<%= booking._id %>">
      <input type="hidden" name="petcaretaker" value="<%= booking.petcaretaker._id %>">
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
  </div>
